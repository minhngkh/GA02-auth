{
    "name": "ga02-auth",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "css:build": "npx tailwindcss -i public/styles/tailwind.css -o public/styles/style.css",
        "css:watch": "npx tailwindcss -i public/styles/tailwind.css -o public/styles/style.css --watch",
        "debug": "cross-env DEBUG=expressjs:server npm start",
        "dev": "concurrently 'npm run css:watch' 'cross-env NODE_ENV=development nodemon src/server.js'",
        "start": "npm run css:build && cross-env NODE_ENV=production node src/server.js"
    },
    "dependencies": {
        "cookie-parser": "^1.4.6",
        "debug": "^4.3.4",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "hbs": "^4.2.0",
        "http-errors": "^2.0.0",
        "morgan": "^1.10.0",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "tailwindcss": "^3.3.5"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "eslint": "^8.53.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3"
    }
}
